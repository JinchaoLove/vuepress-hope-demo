{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@theme-hope/*": ["../../packages/theme/src/client/*.js"]
    },
    "types": [
      "@vuepress/client/types"
    ]
  },
  "include": [
    "env.d.ts",
    "src/.vuepress/**/*.ts",
    "src/.vuepress/**/*.js",
    "src/.vuepress/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "draft"]
}
